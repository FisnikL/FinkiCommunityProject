@model FinkiCommunity.Models.UserDetailModel

@{
    ViewBag.Title = "Detail";
}

<h2>User Details</h2>



<div class="user-detail" style="display:flex">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@Url.Content(Model.ProfilePictureUrl)" alt="Card image cap">
        <div class="card-body">
            <div class="card-text">
                <p>
                    Username: @Model.UserName
                </p>
                <p>
                    Name: @Model.FirstName
                </p>
                <p>
                    Surname: @Model.LastName
                </p>
                <p>
                    e-mail: @Model.Email
                </p>
                
                <p>
                    Gender: @Model.Gender
                </p>
                <p>
                    Birthdate: @Model.Birthdate
                </p>
                <p>
                    Role: @Model.Role
                </p>
                <p>
                    Rating: @Model.Rating
                </p>
            </div>
        </div>
    </div>
    <div>
        <div id="profile-image-container">
            <img src="@Url.Content(Model.ProfilePictureUrl)" width="100" height="100" />
        </div>
        @if (Model.IsHisHerProfile)
        {
            <div>
                @using (Html.BeginForm("UpdateProfilePicture", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <input type="file" name="ProfilePicture" class="form-control" />
                    </div>
                    @*@Html.HiddenFor(model => model.UserName)*@
                    <button type="submit" class="btn btn-primary">Upload</button>
                }
            </div>
        }
    </div>
</div>

<div>
    @if (Model.IsHisHerProfile)
    {
        @Html.ActionLink("Edit", "Edit", "Users", new { id = Model.UserName }, null)
    }
</div>
