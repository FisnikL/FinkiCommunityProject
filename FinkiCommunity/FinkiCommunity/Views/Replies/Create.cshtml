@model FinkiCommunity.Models.Reply

@{
    ViewBag.Title = "Create";
}

<h2>Reply to post: "@ViewBag.Post.Title"</h2>
<div>
    Content: @ViewBag.Post.Content
</div>
<div>
    User: @ViewBag.Post.UserOwner.UserName
</div>
<div>
    ProfilePictureOfUser: <img src="@Url.Content(ViewBag.Post.UserOwner.ProfilePictureUrl)" width="50" height="50" />
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Reply</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content,  5, 50,  new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.Hidden("PostId")
